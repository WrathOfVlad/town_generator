<div class="phb__columns">
  <h1><%= @person.name %></h1>
  <h5>of <%= link_to @person.town.name, @person.town %></h5>

  <p>Level <%= @person.level %> <%= @person.race %> <%= @person.occupation %>, aged <%= @person.age %></p>

  <h3>Ability Scores</h3>
  <table>
    <thead>
      <tr>
        <td>Str</td>
        <td>Dex</td>
        <td>Con</td>
        <td>Int</td>
        <td>Wis</td>
        <td>Cha</td>
      </tr>
    </thead>
    <tbody>
        <td><%= @person.strength %> (<%= modifier(@person.strength) %>)</td>
        <td><%= @person.dexterity %> (<%= modifier(@person.dexterity) %>)</td>
        <td><%= @person.constitution %> (<%= modifier(@person.constitution) %>)</td>
        <td><%= @person.intelligence %> (<%= modifier(@person.intelligence) %>)</td>
        <td><%= @person.wisdom %> (<%= modifier(@person.wisdom) %>)</td>
        <td><%= @person.charisma %> (<%= modifier(@person.charisma) %>)</td>
    </tbody>
  </table>

  <h3>Job</h3>

  <% if @person.establishment.nil? %>
    <p>Unemployed.</p>
  <% else %>
    <p><%= @person.job_title %> at <%= @person.establishment.name %>.</p>

    <% if @person.colleagues.any? %>
    <h5>Colleagues</h5>
    <ul>
      <%= render @person.colleagues, job_titles: true %>
    </ul>
    <% end %>
  <% end %>

  <pre></pre>

  <h3>Relations</h3>

  <% if @person.relations.any? %>
  <ul>
    <% @person.relations.each do |relation| %>
    <li>
      <%= link_to relation.name, town_person_path(relation.town, relation) %>
    </li>
    <% end %>
  </ul>
  <% else %>
  No relations.
  <% end %>
</div>
