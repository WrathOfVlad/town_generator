<h1>Make a new town</h1>

<%= form_for @town do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :size %>
  <%= f.select :size, ["Hamlet", "Village", "Small Town", "Large Town", "Small City", "Large City", "Metropolis"] %>

  <%= f.submit %>
<% end %>

<% if @towns.any? %>

<h1>Check out a pre-generated town</h1>

<ul>
  <% @towns.each do |town| %>
  <li><%=link_to town.name, town_path(town) %></li>
  <% end %>
</ul>

<% end %>